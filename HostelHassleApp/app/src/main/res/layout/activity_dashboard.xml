<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Dashboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Dashboard"
                    android:textColor="@color/black"
                    android:textSize="26dp" />

                <View
                    android:layout_width="50dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_view"></View>


                <View
                    android:layout_width="40dp"
                    android:id="@+id/logout"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="95dp"
                    android:background="@drawable/ic_baseline_logout_24"></View>


            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginRight="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:background="@drawable/bg"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/welcome"
                        android:textColor="#ffff"
                        android:textSize="24dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="259dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/name"
                            android:textColor="#ffff"
                            android:textSize="24dp" />

                        <View
                            android:layout_width="39dp"
                            android:id="@+id/go"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/ic_baseline_arrow_forward_ios_24" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/service"
                    android:textColor="#5E5E5E"
                    android:textSize="18dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:background="#7a8b8b8b">

                </View>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardwifi"
                    android:layout_width="160dp"
                    android:layout_weight="50"
                    android:layout_height="120dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    tools:ignore="InvalidId">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gradient"
                        android:padding="8dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/wifi"
                            android:textColor="#9C000000"
                            android:textSize="18dp" />

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="79dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="90dp"
                            android:layout_marginTop="33dp"
                            android:layout_marginEnd="9dp"
                            android:layout_marginRight="9dp"
                            android:layout_marginBottom="16dp"
                            android:src="@drawable/wifi" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardcarpenter"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_weight="50"
                    android:layout_marginLeft="18dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gradient"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/carp"
                            android:textColor="#9C000000"
                            android:textSize="18dp" />

                        <ImageView
                            android:layout_width="81dp"
                            android:layout_height="76dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="86dp"
                            android:layout_marginTop="29dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginRight="6dp"
                            android:layout_marginBottom="7dp"
                            android:src="@drawable/carpenter" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:weightSum="100"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardelectrician"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_weight="50"
                    tools:ignore="InvalidId">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gradient"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/elctric"
                            android:textColor="#9C000000"
                            android:textSize="18dp" />

                        <ImageView
                            android:layout_width="77dp"
                            android:layout_height="80dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="88dp"
                            android:layout_marginTop="32dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/electrician" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardplumber"
                    android:layout_width="160dp"
                    android:layout_weight="50"
                    android:layout_height="120dp"
                    android:layout_marginLeft="18dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gradient"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/plumber"
                            android:textColor="#9C000000"
                            android:textSize="18dp" />

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="83dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="76dp"
                            android:layout_marginTop="29dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/plumber" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/complaint"
                    android:textColor="#5E5E5E"
                    android:textSize="18dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:background="#7a8b8b8b">

                </View>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:weightSum="100"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardmess"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="8dp"
                    android:layout_weight="50"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gradient2"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/food"
                            android:textColor="#9C000000"
                            android:textSize="18dp" />

                        <ImageView
                            android:layout_width="77dp"
                            android:layout_height="80dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="88dp"
                            android:layout_marginTop="32dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/diet" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardroomservice"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="18dp"
                    app:cardCornerRadius="8dp"
                    android:layout_weight="50"
                    app:cardElevation="2dp"
                    tools:ignore="InvalidId">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gradient2"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/room"
                            android:textColor="#9C000000"
                            android:textSize="18dp" />

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="82dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="82dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginRight="1dp"
                            android:src="@drawable/bucket" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:weightSum="100"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardwater"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="8dp"
                    android:layout_weight="50"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gradient2"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/drinking_water"
                            android:textColor="#9C000000"
                            android:textSize="18dp" />

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="120dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="80dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginBottom="3dp"
                            android:src="@drawable/water" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardothers"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="18dp"
                    app:cardCornerRadius="8dp"
                    android:layout_weight="50"
                    app:cardElevation="2dp"
                    tools:ignore="InvalidId">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gradient2"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/others"
                            android:textColor="#9C000000"
                            android:textSize="18dp" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="73dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="85dp"
                            android:layout_marginTop="35dp"
                            android:layout_marginEnd="13dp"
                            android:layout_marginRight="13dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/others" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"

        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/navbarmenu" />

</androidx.constraintlayout.widget.ConstraintLayout>


